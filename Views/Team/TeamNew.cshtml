@{
    ViewData["Title"] = "Create a Team";
}
@model Team

<div class="whitebox w-75-sm mx-auto p-3">
    <h2 class="text-center mb-3">Create a Team</h2>

    <form class=" border shadow p-3 mb-5 bg-body-tertiary rounded p-5 mt-5" asp-controller="Team" asp-action="TeamCreate" method="post">
    
        <label class="mt-3" asp-for="TeamName"></label>
        <input class="form-control" type="text" asp-for="TeamName">
        <span class="d-block text-danger" asp-validation-for="TeamName"></span>
    
        <button class="btn btn-success d-block mx-auto mt-3">Create</button>
    </form>
</div>