<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    @* <meta http-equiv="refresh" content="1"> *@

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/darts.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-5">
            <div class="container">
                <h4 class="navbar-brand"> Fantasy Dart League</h4>
                <h4 class="navbar-brand ms-5">Welcome @Context.Session.GetString("name")</h4>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        @if(Context.Session.GetInt32("uuid") != null)
                        {
                        <li class="nav-item">
                            <a class="nav-link text-dark mb-1 mx-5" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-dark mb-1 mx-5" asp-area="" asp-controller="Home" asp-action="Index">Brackets</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-dark mb-1 mx-5" asp-area="" asp-controller="User" asp-action="Scoring">Scoring</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mb-1 mx-5" asp-area="" asp-controller="User" asp-action="Draft">Player List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mb-1 mx-5" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                        </li>
                        }
                        @if(Context.Session.GetInt32("uuid")== 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark mb-1 mx-5" asp-area="" asp-controller="Player" asp-action="Update">Update</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark mb-1 mx-5" asp-area="" asp-controller="Team" asp-action="Disable">Disable</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Fantasy Dart League
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
