@model Login

<h1 class="display-4 text-center text-white">Login</h1>
<form class="whitebox border shadow p-3 mb-5 bg-body-tertiary rounded p-5 mt-5 col-sm-10 col-lg-6 mx-auto" asp-controller="User" asp-action="Login" method="post">

    <label class="mt-3" asp-for="NameLogin"></label>
    <input class="form-control" type="text" asp-for="NameLogin">
    <span class="d-block text-danger" asp-validation-for="NameLogin"></span>

    <label class="mt-3" asp-for="PasswordLogin"></label>
    <input class="form-control" type="password" asp-for="PasswordLogin">
    <span class="d-block text-danger" asp-validation-for="PasswordLogin"></span>

    <button class="btn btn-secondary d-block mx-auto mt-3">Login</button>
</form>